 	<script type="text/javascript">
 		var big = document.getElementById("big");
 		var oNavlist = document.getElementById('nav').children;
 		var botten = document.getElementById('botten');
 		var nav = document.getElementById("nav");
 		var left = document.getElementById("left");
 		var right = document.getElementById("right");
 		var i =1;
 		var timer ;
 		var isMoving = false;

 		function next(){
 			i++;
 			navChange();
		    animate(botten,{left:-1200*i},function(){
				if(i===6){
					botten.style.left = "-1200px";
					i = 1;
				}
			});
 		}
 		function pre(){
 			i--;
 			navChange();
			 animate(botten,{left:-1200*i},function(){
				if(i===0){
					botten.style.left = "-6000px";
					i = 5;
				}
			});
 		}

 		big.onmouseover = function(){
 			animate(left,{opacity:50})
 			animate(right,{opacity:50})
 			clearInterval(timer)
 		}
 		big.onmouseout = function(){
 			animate(left,{opacity:0})
 			animate(right,{opacity:0})
 			timer = setInterval(next,3000)
 		}
 		left.onclick = next;
 		right.onclick = pre;

 		//按钮
 		for(var j = 0;j<oNavlist.length;j++){
 			oNavlist[j].idx = j;
 			oNavlist[j].onclick = function(){
 				i = this.idx+1;
 				navChange();
 				animate(botten,{left:-1200*i});
 			}
 		}
 		//变红
 		function navChange(){
 			for(var j = 0;j<oNavlist.length;j++){
 				oNavlist[j].className = ' ';
 			}
 			if(i === 6){
 				oNavlist[0].className = 'active';
 			}else if(i===0){
 				oNavlist[4].className = 'active';
 			}else{
 				oNavlist[i-1].className = 'active';
 			}
 		}


	function getStyle(obj, attr){
		if(obj.currentStyle){
			return obj.currentStyle[attr];
		} else {
			return getComputedStyle(obj, null)[attr];
		}
	}
	function animate(obj,json,callback){
		clearInterval(obj.timer);
		obj.timer = setInterval(function(){
			var isStop = true;
			for(var attr in json){
				var now = 0;
				if(attr == 'opacity'){
					now = parseInt(getStyle(obj,attr)*100);
				}else{
					now = parseInt(getStyle(obj,attr));
				}
				var speed = (json[attr] - now) / 8;
				speed = speed>0?Math.ceil(speed):Math.floor(speed);
				var cur = now + speed;
				if(attr == 'opacity'){
					obj.style[attr] = cur / 100;
				}else{
					obj.style[attr] = cur + 'px';
				}
				if(json[attr] !== cur){
					isStop = false;
				}
			}
			if(isStop){
				clearInterval(obj.timer);
				callback&&callback();
			}
		}, 30)
	}
 	</script>
